      {
        "type": "header",
        "content": "Shipping calculator"
      },
      {
        "type": "checkbox",
        "id": "show_shipping_calculator",
        "label": "Show shipping estimator",
        "default": true,
        "info": "Shipping calculator will show on the cart page only, not in the drawer."
      },
      {
        "type": "text",
        "id": "shipping_calculator_default_country",
        "label": "Default country selection",
        "default": "United States"
      },
      {
        "type": "paragraph",
        "content": "If your customer is logged-in, the country in his default shipping address will be selected. If you are not sure about the  spelling to use here, refer to the first checkout page."
      },
      {
        "type": "header",
        "content": "Free shipping countdown"
      },
      {
        "type": "checkbox",
        "id": "show_shipping_countdown",
        "label": "Show free shipping countdown",
        "default": false
