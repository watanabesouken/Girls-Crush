  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [{
            "value": "page_only",
            "label": "Page only"
          },
          {
            "value": "drawer",
            "label": "Drawer cart"
          },
          {
            "value": "no_js_cart",
            "label": "Page only - no automatic updates"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "show_additional_buttons",
        "label": "Enable additional checkout buttons",
        "default": false,
        "info": "Buttons will only show in the cart type selected, not both."
      },
      {
        "type": "checkbox",
        "id": "show_tax_note",
        "label": "Show tax note",
        "default": false,
        "info": "Shows a note that tax is calculated at checkout"
