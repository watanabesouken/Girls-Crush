{% layout 'password' %}

{% comment %} Password Assets {% endcomment %}
<link rel="preload" href="{{ 'section-main-password.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link rel="stylesheet" href="{{ 'section-main-password.css' | asset_url }}"></noscript>

{% if section.settings.background_image %}
  {% assign bg_image = section.settings.background_image %}
{% endif %}

<section class="password-page relative"
data-section-id="{{ section.id }}"
data-section-type="password-page"
data-section-loaded="false">

  <div class="grid__wrapper edge cg0 full-height">
    {% if bg_image %}
      <div class="left span-6 auto">
      </div>
    {% endif %}
    <div class="right {% if bg_image %}span-6{% else %}span-12{% endif %} auto relative">
      <div class="px5 py7 inner">
        <div class="site-logo a-center">
          {% if section.settings.logo != blank %}
            <a href="{{ routes.root_url }}">
              <img src="{{ section.settings.logo | img_url: '800x' }}" loading="lazy" alt="{{ section.settings.logo.alt | default: shop.name }}">
            </a>
          {% else %}
            <h2><a href="{{ routes.root_url }}">{{ shop.name }}</a></h2>
          {% endif %}
        </div>

        <div class="password-page-description a-center mt12 mb9">
          {% unless section.settings.title == blank %}
            <h1>{{ section.settings.title }}</h1>
          {% endunless %}
          {% unless shop.password_message == blank %}
            <p>{{ shop.password_message }}</p>
          {% endunless %}
        </div>

        <div class="password-page-forms a-center mt4">

          <div id="register-form" class="show">
            {% form 'customer' %}
              {% if form.posted_successfully? %}
                <div class="note note-success">
                  <div class="inline-block v-center">
                    {% render 'snip-icons',
                       wrapper: '.password-page-forms',
                       type: 'apollo',
                       icon: 'checkmark',
                       size: '20px',
                       classes: 'mr3',
                       fill: 'var(--success-msg-dark)',
                       hover: 'var(--success-msg-dark)' %}
                  </div>
                  <p class="sm-caps inline-block v-center mb0">{{ 'password.general.thanks' | t }}</p>
                </div>
              {% else %}
                <div class="form form-vertical relative">
                  <input type="hidden" name="contact[tags]" value="prospect, password page">
                  <input type="email" name="contact[email]" id="password-email" placeholder="{{ 'password.general.email_address' | t }}">
                  <input type="submit" class="button" value="{{ 'password.general.submit' | t }}">
                </div>
                {% render 'snip-form-error' %}
              {% endif %}
            {% endform %}
          </div>

          <div id="login-form" class="hide">
            {% form 'storefront_password' %}
              <div class="form form-vertical relative">
                <input type="password" name="password" placeholder="{{ 'password.general.password' | t }}">
                <input class="button" type="submit" value="{{ 'password.general.enter' | t }}">
              </div>
              {% render 'snip-form-error' %}
            {% endform %}
          </div>

          <p class="mb4">
            <a class="register js-toggle-register" href="#">{{ 'password.general.register' | t }}</a> or <a class="login js-toggle-login" href="#">{{ 'password.general.enter_store' | t }}</a>
          </p>
        </div>

        <div class="password-page-footer a-center mt9">
          <div class="password-page-icons">
            {% render 'snip-social-icons' %}
          </div>

          <div>
            <p>{{ 'password.general.powered' | t }} <a rel="nofollow" href="//www.shopify.com/?ref=undergroundmedia">Shopify</a></p>
          </div>
        </div>
      </div>

    </div>
  </div>

   {% assign image_size = '2048x' %}
   {% assign opacity = section.settings.overlay_color_opacity | divided_by: 100.00 %}

<style>
  .template-password {
    {% if section.settings.background_color %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
    color: {{ section.settings.text_color }};
  }
  {% if bg_image %}
    .password-page .left {
      {% if section.settings.background_image %}
        background:
        {%- if section.settings.show_overlay_color -%}
          linear-gradient(
            {{ section.settings.background_overlay_color | color_modify: 'alpha', opacity }},
            {{ section.settings.background_overlay_color | color_modify: 'alpha', opacity }}),
        {%- endif -%}
        url({{ section.settings.background_image | img_url: image_size }})
      {% endif %};
      background-position: center center;
      background-repeat: no-repeat;
      background-size: cover;
    }
  {% endif %}

  {% if section.settings.logo_max_width != blank %}
    .password-page .site-logo a {
      display: inline-block;
      margin: 0;
      word-break: break-word;
      max-width: {{ section.settings.logo_max_width }}px;
    }
    .password-page .site-logo img {
      display: block;
      width: 100%;
      max-width: {{ section.settings.logo_max_width }}px;
    }
  {% endif %}
  .password-page-forms input[type="email"]::placeholder,
  .password-page-forms input[type="password"]::placeholder {
    color: {{ section.settings.text_color }} !important;
  }
  .password-page-forms input[type="email"]::-webkit-input-placeholder,
  .password-page-forms input[type="password"]::-webkit-input-placeholder { /* Chrome/Opera/Safari */
    color: {{ section.settings.text_color }} !important;
  }
  .password-page-forms input[type="email"]::-moz-placeholder,
  .password-page-forms input[type="password"]::-moz-placeholder { /* Firefox 19+ */
    color: {{ section.settings.text_color }} !important;
  }
  .password-page-forms input[type="email"]:-ms-input-placeholder,
  .password-page-forms input[type="password"]:-ms-input-placeholder { /* IE 10+ */
    color: {{ section.settings.text_color }} !important;
  }
  .password-page-forms input[type="email"]:-moz-placeholder,
  .password-page-forms input[type="password"]:-moz-placeholder { /* Firefox 18- */
    color: {{ section.settings.text_color }} !important;
  }
  .password-page-forms input[type="submit"] {
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
  }
  .password-page-forms input[type="submit"]:hover {
    opacity: 0.75;
  }
  .password-page-forms input[type="email"],
  .password-page-forms input[type="password"] {
    border-color: {{ section.settings.border_color }};
  }
  .password-page p,
  .password-page a,
  .password-page h1,
  .password-page h2,
  .password-page h3
  .password-page-newsletter h3,
  .password-page-footer,
  .slideout-toggle.open_password,
  .password-page-forms input[type="email"],
  .password-page-forms input[type="password"] {
    color: {{ section.settings.text_color }};
  }
</style>
</section>
{% schema %}
{
  "name": "Password page",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Coming Soon"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Signup Form"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Form border color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 100,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Custom logo width",
      "default": 500
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "paragraph",
      "content": "Choose between a background color or background image."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Right side background color",
      "default": "#FFFFFF"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Left side background image"
    },
    {
      "type":      "checkbox",
      "id":        "show_overlay_color",
      "label":     "Show background overlay color",
      "default":   false
    },
    {
      "type": "color",
      "id": "background_overlay_color",
      "label": "Background image overlay color",
      "default": "#f5f5f5"
    },
    {
      "type":   "range",
      "id":     "overlay_color_opacity",
      "min":       10,
      "max":       100,
      "step":      10,
      "unit":      "%",
      "label":     "Color overlay opacity",
      "default":   80
    }
  ]
}
{% endschema %}
