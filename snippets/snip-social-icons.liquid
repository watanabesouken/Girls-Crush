{%- liquid

  unless fill_color
    assign fill_color = 'var(--text-color)'
  endunless

  unless hover_color
    assign hover_color = 'var(--text-color-light)'
  endunless

-%}
<div id="social-icons" class="social-icons__general--wrapper mb1">
  {% if settings.instagram != blank %}
    <a class="inline-block v-center mt0 mr3 mb5 ml0" href="{{ settings.instagram }}" title="Instagram">
      {% render 'snip-icons',
         wrapper: '.social-icons__general--wrapper',
         type: 'social',
         icon: 'instagram',
         size: '20px',
         classes: 'm0 p0',
         fill: fill_color,
         hover: hover_color %}
    </a>
  {% endif %}
